<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @task.title %></h1>
      <h2><%= @task.details %></h2>
      <h2><%= @task.completed %></h2>
      <%= link_to "Back to tasks", tasks_path %>
      <%= link_to "Delete", task_path(@task), method: :delete %>
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
    </div>
  </div>
</div>
